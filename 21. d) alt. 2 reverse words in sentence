#include <stdio.h>
#include <stdlib.h>
#include <string.h>


const int SENTENCE_LENGTH=100;

int main(void)
{
	char sentence[SENTENCE_LENGTH];
	int i;

	printf("Please, write a sentence: ");
	fgets (sentence, SENTENCE_LENGTH, stdin);
	
		for (i=0; i<=strlen(sentence); i++)
		{
			l=0;
				while ((sentence[i] != ' ')&&(sentence[i] != '\n')&&(i<=strlen(sentence)))
				{
				word[l]=sentence[i];
				l=l+1;
				i=i+1;
				}
			l=l-1;
		for ( ; l>=0; l=l-1)
		{
			printf("%c", word[l]);
			printf(" ");
		}
			
	return 0;
}
