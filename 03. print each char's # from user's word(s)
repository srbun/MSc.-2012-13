//take user's input (any # of words), count each character's #, print in column

#include <iostream>
#include <string>
//#include <cstring>
#include <iomanip>
using namespace std;

int main()
{
	int ai=97,j;
	int charnum;
	string sentence;
	int counter=0;

	cout<<"Please, enter a short, random sentence.\n";
    getline (cin, sentence);
	cout<<sentence <<endl;
	charnum = sentence.size();
    cout<<"The number of characters is: " <<charnum <<"." <<endl;

//	int test;
    for(ai=97; ai < 123; ai++)
    {
        counter = 0;
//cout<<(char)ai <<endl;
        for(j=0; j < charnum; j++)
        {
            if((char)ai == sentence[j])
            counter++;
        }

    cout<<(char)ai << " = " << counter <<endl;
    }
    //cout<<"The number of instances of each letter is as follows:" <<endl;
    //cout<<'a = '<<(char)ai <<endl;
	return 0;
}
