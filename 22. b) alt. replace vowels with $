#include <stdio.h>
#include <stdlib.h>
#include <string.h>

int main(void)
{
const int SENTENCE_LENGTH=100;

char sentence [SENTENCE_LENGTH];
int i;

printf("Please, enter a sentence: ");
fgets (sentence, SENTENCE_LENGTH, stdin);

	for (i=0; i<=strlen(sentence); i++)
		{
		if ((sentence[i] == 'a') || (sentence[i] == 'e') ||(sentence[i] == 'i') || (sentence[i] == 'o') || (sentence[i] == 'u') || (sentence[i] == 'y'))
		sentence[i]= '$';
		}
	printf("%s\n", sentence);
	
	return 0;
}
