//read 2 ints - a) sum all ints btwn 1 & m

#include <stdio.h>

int main ()
{
int i, m, n, sum = 0;
//N is replaced by m (capitals = CONSTANT [per demonstrator])

//have user enter 2 #s
	printf("Enter two numbers.\n");
	scanf ("%d%d", &m, &n);
	printf("You entered %d and %d.\n", m, n);
//for-loop to count off all #s before m	
	for(i = 0; i <= m; i++)
		sum = sum + i;
//the sum is the sum of each cycle + 1 (1 + 1; 2 + 1; 3 + 1...)		
	printf("The sum is %d.", sum);
//ex.: 4 & 2 = sum is 10 (1+2+3+4=10)
return 0;	
}
